#include <iostream>
using namespace std;

int main() {
    int n1, n2, ans;
    cout << "Enter two positive integers: ";
    cin >> n1 >> n2;

    try {
        if (n1 < 0 || n2 < 0) {
            throw "Negative input not allowed!";
        }
        if (n2 == 0) {
            throw "Division by zero!";
        }
        ans = n1 / n2;
        cout << "Answer = " << ans << endl;
    }
    catch (const char* msg) {
        cout << "\nERROR: " << msg << endl;
    }

    return 0;
}
/*Output:-
Enter two positive integers: 2
4
Answer = 0
*/
